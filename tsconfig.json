{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2022"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
